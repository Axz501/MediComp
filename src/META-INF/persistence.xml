<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MediCompPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>Logica.Asistente</class>
    <class>Logica.Medico</class>
    <class>Logica.Usuario</class>
    <class>Logica.Jornada</class>
    <class>Logica.Direccion</class>
    <class>Logica.Consulta</class>
    <class>Logica.Entidad</class>
    <class>Logica.Paciente</class>
    <class>Logica.EstudioRealizado</class>
    <class>Logica.NombredeEstudio</class>
    <class>Logica.Prototipo</class>
    <class>Logica.Deuda</class>
    <class>Logica.EstadoDeuda</class>
    <class>Logica.Cuota</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/medicomp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="hola"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
